# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Secret for session management (generate a strong random string)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Required: Secret for CSRF protection (generate a strong random string)
CSRF_SECRET=your-super-secret-csrf-key-change-this-in-production

# Required: Public URL of your application
PUBLIC_SITE_URL=http://localhost:3000

# Optional: Admin email for notifications
ADMIN_EMAIL=admin@yourdomain.com

# Database configuration (SQLite file path)
DATABASE_URL=file:/app/data/production.db

# Rate limiting configuration
ENABLE_RATE_LIMITING=true
MAX_LOGIN_ATTEMPTS=5
MAX_BET_ATTEMPTS=10

# Node environment
NODE_ENV=production
